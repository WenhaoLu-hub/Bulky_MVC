@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel


<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>Create New Category
            </a>
        </div>

    </div>

    <table class="table table-bordered table-striped">
        <tr>
        <thead>
        <th>Category Name</th>
        <th>Display Order</th>
        </thead>
        <tbody>
            @foreach (var item in Model.CategoryList)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@item.CategoryId"  class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-page="/categories/delete" asp-route-id="@item.CategoryId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
        </tr>
    </table>
</div>