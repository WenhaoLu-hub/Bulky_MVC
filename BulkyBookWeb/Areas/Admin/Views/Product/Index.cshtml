@model List<Product>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Product List</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <tr>
                <thead>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Description</th>
                <th>Price</th>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.ISBN</td>
                        <td>null</td>
                        <td>@item.ListPrice</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-route-id="@item.ProductId" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-route-id="@item.ProductId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>

                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </tr>
        </table>
    </div>
</div>
