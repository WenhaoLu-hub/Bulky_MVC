@model Product

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Delete Product</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ProductId" hidden="hidden"/>
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled="disabled" class="form-control border-0 shadow"/>
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" disabled="disabled" class="form-control border-0 shadow"/>
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled="disabled" class="form-control border-0 shadow"/>
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled="disabled" class="form-control border-0 shadow"/>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled="disabled" class="form-control border-0 shadow"/>
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice50" disabled="disabled" class="form-control border-0 shadow"/>
                    <label asp-for="ListPrice50" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice100" disabled="disabled" class="form-control border-0 shadow"/>
                    <label asp-for="ListPrice100" class="ms-2"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" asp-controller="Product" asp-action="Delete" class="btn btn-danger form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a
                            asp-controller="Product"
                            asp-action="Index"
                            class="btn btn-outline-secondary form-control border">
                            Back
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>